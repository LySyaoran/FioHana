@model IEnumerable<Do_An.Models.cart>
@using System.Globalization;

@{
    ViewBag.Tittle = "Cart";
    Layout = "~/Views/_shared/_LayoutPage1.cshtml";
}

<style>
    .py-5 {
        padding-top: 1.3rem !important;
    }
</style>

<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center">
            <h5 class="mb-3" style="font-weight: 700">
                <a href="~/Shop/Shop" class="text-body" style="text-decoration: none">
                    <i class="fas fa-long-arrow-alt-left me-2"></i>Quay lại Shop
                </a>
            </h5>
            <hr>
            <div class="col-md-8">
                <div class="card rounded-3 mb-4">
                    @foreach (var item in Model)
                    {
                        <div class="card-body p-4" style="border-bottom: 1px solid #c7c8c9" data-product-id="@item.id_product">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="@Url.Content("~/Assets/img/" + item.product.hinh_anh)"
                                         class="img-fluid rounded-3" alt="@item.product.ten">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">@item.product.ten</p>
                                    <p><span class="text-muted">Size: </span>@item.product.kich_thuoc</p>
                                </div>

                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2 update-cart-quantity" data-change="-1">
                                        <i class="fas fa-minus"></i>
                                    </button>

                                    <input id="form1" min="1" name="quantity" value="@item.soluong_sp" type="number" class="form-control quantity-input" style="width: 60px" />

                                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2 update-cart-quantity" data-change="1">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>

                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0 price" data-price="@item.product.gia">@item.product.gia.ToString("N0", CultureInfo.GetCultureInfo("vi-VN")) <span>VND</span></h5>
                                </div>

                                <div style="display: flex; align-items: center; justify-content: center" class="col-md-1 col-lg-1 col-xl-1">
                                    <a href="javascript:void(0);" class="text-danger delete-cart-item"><i class="fas fa-trash fa-lg"></i></a>
                                </div>

                                <div style="display: flex; align-items: center; justify-content: center" class="col-md-1 col-lg-1 col-xl-1">
                                    <input style="width: 25px; height: 25px" type="checkbox" name="submit_buy" class="submit_buy" value="" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Thành tiền
                                <span class="sum_money">0<span>VND</span></span>
                            </li>
                            @*<li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Phí vận chuyển
                                <span>Gratis</span>
                            </li>*@
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Tổng thanh toán</strong>
                                    <strong>
                                        <p class="mb-0">(Bao gồm VAT)</p>
                                    </strong>
                                </div>
                                <span><strong class="sum_money"></strong></span>
                            </li>
                        </ul>

                        <a href="javascript:void(0);" id="checkout-btn" class="btn btn-primary btn-lg btn-block">
                            Thanh toán
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {

        function updateTotal() {
            var total = 0;
            $('.submit_buy:checked').each(function () {
                var $cardBody = $(this).closest('.card-body');
                var price = parseFloat($cardBody.find('.price').data('price'));
                var quantity = parseInt($cardBody.find('.quantity-input').val());
                total += price * quantity;
            });
            $('.sum_money').text(total.toLocaleString('vi-VN') + ' VND');
        }

        $('.submit_buy').on('change', function () {
            updateTotal();
        });

        $('.delete-cart-item').on('click', function () {
            var productId = $(this).closest('.card-body').data('product-id');
            var $cardBody = $(this).closest('.card-body');

            $.ajax({
                url: '@Url.Action("DeleteFromCart", "ShoppingCart")',
                type: 'POST',
                data: { productId: productId },
                success: function (response) {
                    if (response.success) {
                        $cardBody.remove();
                        alert('Sản phẩm đã được xóa khỏi giỏ hàng.');
                    } else {
                        alert('Không thể xóa sản phẩm khỏi giỏ hàng.');
                    }
                },
                error: function (error) {
                    alert('Lỗi khi xóa sản phẩm khỏi giỏ hàng.');
                }
            });
        });

        $('.update-cart-quantity').on('click', function () {
            var $input = $(this).siblings('.quantity-input');
            var productId = $(this).closest('.card-body').data('product-id');
            var quantityChange = parseInt($(this).data('change'));
            var newQuantity = parseInt($input.val()) + quantityChange;

            if (newQuantity < 1) {
                alert('Số lượng sản phẩm phải lớn hơn hoặc bằng 1.');
                return;
            }

            $input.val(newQuantity);

            $.ajax({
                url: '@Url.Action("UpdateCart", "ShoppingCart")',
                type: 'POST',
                data: { productId: productId, quantity: newQuantity },
                success: function (response) {
                    if (response.success) {
                        alert('Số lượng sản phẩm đã được cập nhật.');
                    } else {
                        alert('Không thể cập nhật số lượng sản phẩm.');
                    }
                },
                error: function (error) {
                    alert('Lỗi khi cập nhật số lượng sản phẩm.');
                }
            });
        });

        $('#checkout-btn').on('click', function () {
            var selectedItems = [];

            $('.submit_buy:checked').each(function () {
                var $cardBody = $(this).closest('.card-body');
                var productId = $cardBody.data('product-id');
                var quantity = parseInt($cardBody.find('.quantity-input').val());

                selectedItems.push({ productId: productId, quantity: quantity });
            });

            $.ajax({
                url: '@Url.Action("SaveSelectedItems", "ShoppingCart")',
                type: 'POST',
                data: JSON.stringify({ items: selectedItems }),
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        window.location.href = '@Url.Action("Pay", "Pay")';
                    } else {
                        alert('Không thể lưu thông tin sản phẩm đã chọn.');
                    }
                },
                error: function (error) {
                    alert('Lỗi khi lưu thông tin sản phẩm đã chọn.');
                }
            });
        });

        // Initial total calculation
        updateTotal();
    });
</script>
