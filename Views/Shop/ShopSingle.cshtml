@model Do_An.Models.ShopSingleViewModel
@using System.Globalization

@{
    ViewBag.Title = "ShopSingle";
    Layout = "~/Views/_shared/_LayoutPage1.cshtml";
}
<!-- Open Content -->
<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5 position-relative">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="@Url.Content("~/Assets/img/" + Model.Product.hinh_anh)" alt="Card image cap" id="product-detail">
                </div>
                @if (Model.Product.so_luong_ton_kho == 0)
                {
                    <img class="position-absolute" src="@Url.Content("~/Assets/img/icon_hethang.png")" alt="Hết hàng" style="top: 0; right: 0; width: 100px; height: 100px;">
                }
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h2">@Model.Product.ten</h1>
                        <p class="h3 py-2">@Model.Product.gia.ToString("N0", CultureInfo.GetCultureInfo("vi-VN")) VND</p>
                        <p class="py-2">
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <span class="list-inline-item text-dark">Rating 4.8 | 36 Comments</span>
                        </p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Size:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@Model.Product.kich_thuoc</strong></p>
                            </li>
                        </ul>

                        <h6>Description:</h6>
                        <p>@Model.Product.mo_ta</p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Màu sắc</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@Model.Product.mau_sac</strong></p>
                            </li>
                            <br />
                            <li class="list-inline-item">
                                <h6>Dịp phù hợp</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@Model.Occasion</strong></p>
                            </li>
                            <br />
                            <li class="list-inline-item">
                                <h6>Số lượng: </h6>
                            </li>
                            <li class="list-inline-item"><span class="btn btn-success" id="btn-minus">-</span></li>
                            <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                            <li class="list-inline-item"><span class="btn btn-success" id="btn-plus">+</span></li>
                        </ul>
                        @if(Model.Product.so_luong_ton_kho <= 0)
                        {
                            <p class="text-danger">Sản phẩm đã hết hàng</p>
                        }
                        else{
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button id="addToCartBtn" class="btn btn-success btn-lg" name="submit" value="addtocard">Add To Cart</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Close Content -->
<!-- Start Article -->
<section class="py-5">
    <div class="container">
        <div class="row text-left p-2 pb-3">
            <h4>Related Products</h4>
        </div>
        <div id="carousel-related-product">
            @foreach (var product in Model.RelatedProducts)
            {
                <div class="p-2 pb-3">
                    <div class="card mb-4 product-wap rounded-0">
                        <div class="card rounded-0">
                            <img class="card-img rounded-0 img-fluid" src="@Url.Content("~/Assets/img/" + product.hinh_anh)" alt="@product.ten">
                            @if (product.so_luong_ton_kho == 0)
                            {
                                <img class="position-absolute" src="@Url.Content("~/Assets/img/icon_hethang.png")" alt="Hết hàng" style="top: 0; right: 0; width: 100px; height: 100px;">
                            }
                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                <ul class="list-unstyled">
                                    <li><a class="btn btn-success text-white mt-2" href="@Url.Action("ShopSingle", "Shop", new { id = product.id })"><i class="far fa-eye"></i></a></li>
                                    <li><a class="btn btn-success text-white mt-2" href="#"><i class="fas fa-cart-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <a href="#" class="h3 text-decoration-none">@product.ten</a>
                            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                <li>@product.kich_thuoc</li>
                                <li class="pt-2">
                                    <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                </li>
                            </ul>
                            <ul class="list-unstyled d-flex justify-content-center mb-1">
                                <li>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-muted fa fa-star"></i>
                                    <i class="text-muted fa fa-star"></i>
                                </li>
                            </ul>
                            <p class="text-center mb-0">@product.gia.ToString("N0", CultureInfo.GetCultureInfo("vi-VN")) VND</p>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>
<!-- End Article -->

<script>
    document.getElementById('addToCartBtn').addEventListener('click', function () {
        var userId = '@Session["UserId"]'; // Lấy ID của user đang đăng nhập
        var productQuantity = @Model.Product.so_luong_ton_kho; // Số lượng tồn kho của sản phẩm

        if (productQuantity === 0) {
            // Nếu sản phẩm hết hàng
            alert('Sản phẩm đã hết hàng!');
            return;
        }

        if (!userId || userId === 'null') {
            // Nếu user chưa đăng nhập, chuyển hướng đến trang đăng nhập
            window.location.href = '@Url.Action("Login", "Login")';
            return;
        }

        var productId = '@Model.Product.id'; // Lấy ID của sản phẩm hiện tại
        var quantity = parseInt(document.getElementById('var-value').innerText); // Lấy số lượng sản phẩm

        $.ajax({
            url: '@Url.Action("AddToCart", "ShoppingCart")',
            type: 'POST',
            data: {
                userId: userId,
                productId: productId,
                quantity: quantity
            },
            success: function (response) {
                if (response.success) {
                    alert('Thêm vào giỏ hàng thành công.');
                    window.location.href = '@Url.Action("Cart", "ShoppingCart")';
                } else {
                    alert('Thêm vào giỏ hàng không thành công.');
                }
            },
            error: function (error) {
                alert('Thêm vào giỏ hàng không thành công.');
            }
        });
    });
});
</script>

