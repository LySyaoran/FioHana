            </div>
        </div>

        <div class="form-group text-center">
            <div class="btn-group" role="group">
                <button type="submit" class="btn btn-success">Thêm</button>
                <a href="@Url.Action("ProductList")" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
}

<style>
    .btn-group .btn {
        min-width: 100px; /* Ensures buttons have the same minimum width */
    }

        .btn-group .btn + .btn {
            margin-left: 10px;
        }
</style>
