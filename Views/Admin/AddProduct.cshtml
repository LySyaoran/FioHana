            </div>
        </div>

        <div class="form-group">
            Loại hoa
            <div class="col-md-10">
                @Html.EditorFor(model => model.loai_hoa_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.loai_hoa_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Dịp phù hợp
            <div class="col-md-10">
                @Html.EditorFor(model => model.dip_phu_hop_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dip_phu_hop_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Kích thước
            <div class="col-md-10">
                @Html.EditorFor(model => model.kich_thuoc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kich_thuoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Màu sắc
            <div class="col-md-10">
                @Html.EditorFor(model => model.mau_sac, new { htmlAttributes = new { @class = "form-control" } })
