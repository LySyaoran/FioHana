@model Do_An.Models.product

@{
    ViewBag.Tittle = "Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<div class="container mt-4">
    <h2>Delete Product</h2>

    <h3>Are you sure you want to delete this product?</h3>

    <div class="card p-3">
        <h4 class="card-header">Product Details</h4>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ten)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ten)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.mo_ta)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.mo_ta)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.gia)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.gia)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.hinh_anh)
                </dt>
                <dd class="col-sm-9">
                    <img src="@Model.hinh_anh" alt="@Model.ten" class="img-fluid" style="max-height: 100px; max-width: 100px;" />
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.so_luong_ton_kho)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.so_luong_ton_kho)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ngay_nhap_kho)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ngay_nhap_kho)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.loai_hoa_id)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.loai_hoa_id)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.dip_phu_hop_id)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.dip_phu_hop_id)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.kich_thuoc)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.kich_thuoc)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.id_gg)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.id_gg)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.mau_sac)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.mau_sac)
                </dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions text-center mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("ProductList")" class="btn btn-secondary">Back to List</a>
        </div>
    }
</div>