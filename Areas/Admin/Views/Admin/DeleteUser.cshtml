@model Do_An.Models.user

@{
    ViewBag.Tittle = "Delete User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<div class="container mt-4">
    <h2>Delete User</h2>

    <h3>Are you sure you want to delete this?</h3>

    <div class="card p-3">
        <h4 class="card-header">User Details</h4>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ten)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ten)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.email)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.dia_chi)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.dia_chi)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.so_dien_thoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.so_dien_thoai)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.vai_tro)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.vai_tro)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ghi_chu)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ghi_chu)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ngay_sinh)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ngay_sinh)
                </dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions text-center mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("UserList")" class="btn btn-secondary">Back to List</a>
        </div>
    }
</div>