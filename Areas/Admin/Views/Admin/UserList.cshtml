@model IEnumerable<Do_An.Models.user>

@{
    ViewBag.Tittle = "User List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-4">
        <h2 class="mb-4">User List</h2>


        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ten)</th>
                    <th>@Html.DisplayNameFor(model => model.email)</th>
                    <th>@Html.DisplayNameFor(model => model.dia_chi)</th>
                    <th>@Html.DisplayNameFor(model => model.so_dien_thoai)</th>
                    <th>@Html.DisplayNameFor(model => model.vai_tro)</th>
                    <th>@Html.DisplayNameFor(model => model.ghi_chu)</th>
                    <th>@Html.DisplayNameFor(model => model.ngay_sinh)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ten)</td>
                        <td>@Html.DisplayFor(modelItem => item.email)</td>
                        <td>@Html.DisplayFor(modelItem => item.dia_chi)</td>
                        <td>@Html.DisplayFor(modelItem => item.so_dien_thoai)</td>
                        <td>@Html.DisplayFor(modelItem => item.vai_tro)</td>
                        <td>@Html.DisplayFor(modelItem => item.ghi_chu)</td>
                        <td>@Html.DisplayFor(modelItem => item.ngay_sinh)</td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "EditUser", new { id = item.id }, new { @class = "btn btn-primary btn-sm me-2" })
                            @Html.ActionLink("Delete", "DeleteUser", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
